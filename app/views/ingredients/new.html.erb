<%= form_for :ingredient, url: ingredients_path, method: :post do |form| %>
  <label for="ingredient_name">Имя:</label>
  <%= form.text_field :name, class: 'form-control w-50 mb-3' %>
  <label for="ingredient_price">Цена:</label>
  <%= form.number_field :price, class: 'form-control w-50 mb-3' %>
  <%= form.hidden_field :provider_id, value: @provider_id %>
  <%= form.submit 'Создать', class: 'btn btn-success' %>
<% end %>
